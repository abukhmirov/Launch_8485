@model State

<h1>Edit State</h1>

<form method="post" action="/states/@Model.Id">

    <label for="state-name">Name:</label>
    <input type="text" id="state-name" name="name" value="@Model.Name">
    <br>
    <br>
    <label for="state-abbreviation">Abbreviation:</label>
    <input type="text" id="state-abbreviation" name="abbreviation" value="@Model.Abbreviation">
    <br>
    <br>
    <label for="state-timeZone">TimeZone:</label>
    <input type="text" id="state-timeZone" name="timeZone" value="@Model.TimeZone">
    <br>
    <br>
    <button type="submit">Submit</button>

</form>
